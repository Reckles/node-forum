<!DOCTYPE html>

<html>
    <head>
        <% include ../partials/head %>
        <script src="js/pages/index.js"></script>
    </head>
    <body>

        <header>
            <% include ../partials/header %>
        </header>

        <ul class="posts-list">
            <% posts.forEach(function(post){%>
            <li>
                <div class="post-box">
                    <h4 id="user-name">
                        <%= post.userName %>
                    </h4>           
                    <div class="post-body">
                        <h3 id="postTitle">
                            <%= post.title %>
                        </h3>
                        <p id="post">
                            <%= post.text %>
                        </p>
                    </div>
                    <h6 id="post-time">
                        <%= post.createdAt %>
                    </h6>
                    <div class="post-footer">
                        <button id="newComment" onclick="btnNewComment()" data-id="<%= post._id%>">Leave a comment</button>
                        <button id="seeComment" onclick="btnSeeComment()" data-id="<%= post._id%>">See comments</button>
                    </div>
                </div>
            </li>
            <% });%>
        </ul>
 
    </body>

    <footer>
        <% include ../partials/footer %>
    </footer>

  
</html>